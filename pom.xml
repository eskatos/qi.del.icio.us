
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.codeartisans</groupId>
    <artifactId>jizmo</artifactId>
    <packaging>war</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>${project.artifactId}</name>
    <url>http://codeartisans.org</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>
        <qi4j.version>1.1-SNAPSHOT</qi4j.version>
        <gwt.version>2.0.0</gwt.version>
        <gwt.plugin.version>1.2</gwt.plugin.version>
        <gwt.module.default>org.codeartisans.jizmo.presentation.gwt.GwtClient</gwt.module.default>
    </properties>
    <build>
        <finalName>qi.del.icio.us</finalName>
        <outputDirectory>war/WEB-INF/classes</outputDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <plugin>
                <!-- For use with jerry:run for testing only json/rest services -->
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>7.0.1.v20091125</version>
                <configuration>
                    <scanIntervalSeconds>5</scanIntervalSeconds>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>jizmo.default</id>
            <!-- Active by default, use to build the project, should be deactivated to run the project -->
            <activation>
                <property>
                    <name>!default.disable</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <!--version>2.3</version-->
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>.gwt-tmp</directory>
                                    <followSymlinks>false</followSymlinks>
                                </fileset>
                                <fileset>
                                    <directory>war</directory>
                                    <includes>
                                        <include>jizmo</include>
                                        <include>WEB-INF/classes</include>
                                        <include>WEB-INF/lib</include>
                                    </includes>
                                    <followSymlinks>false</followSymlinks>
                                </fileset>
                            </filesets>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <version>${gwt.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>jizmo.gwt</id>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <modules>
                                        <module>${gwt.module.default}</module>
                                    </modules>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <configuration>
                            <warSourceExcludes>.gwt-tmp/**</warSourceExcludes>
                            <webXml>war/WEB-INF/web.xml</webXml>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>run</id>
            <!-- Activate to run the web hosted version -->
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <version>${gwt.plugin.version}</version>
                        <configuration>
                            <module>${gwt.module.http}</module>
                            <runTarget>jizmo/index.html</runTarget>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>
